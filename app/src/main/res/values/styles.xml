<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Parte1" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowBackground">@color/color3</item>
        <item name="android:textColorPrimary">@color/color2</item>
        <item name="colorButtonNormal">@color/color1</item>
        <item name="colorSwitchThumbNormal">@color/color2</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/colorFondo2</item>


        <!-- Used by MediaRouter -->
        <item name="isLightTheme">false</item>


    </style>

    <style name="AppTheme.Parte2" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowBackground">@color/color3</item>
        <item name="android:textColorPrimary">@color/color4</item>
        <item name="colorButtonNormal">@color/color2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">10dp</item>
        <item name="colorSwitchThumbNormal">@color/color2</item>
        <item name="android:background">@color/colorFondo1</item>

        <!-- Used by MediaRouter -->
        <item name="isLightTheme">true</item>

    </style>

    <style name="AppTheme.Parte3" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowBackground">@color/color3</item>
        <item name="android:textColorPrimary">@color/color1</item>
        <item name="colorButtonNormal">@color/color3</item>
        <item name="colorSwitchThumbNormal">@color/color2</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@color/colorFondo3</item>


        <!-- Used by MediaRouter -->
        <item name="isLightTheme">false</item>


    </style>
</resources>
